<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="carEntity"
            type="com.example.taskauto.model.room.CarEntity" />

        <variable
            name="clickHandler"
            type="com.example.taskauto.listeners.ItemClickListener" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{ ()->clickHandler.onItemClick(position) }"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@{String.valueOf(carEntity.id)}"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:padding="2dp"
                android:text="@{ carEntity.manName}"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:padding="2dp"
                android:text="@{carEntity.modelName}"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@{String.valueOf(carEntity.year)}"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@{ String.valueOf(carEntity.price) }"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
